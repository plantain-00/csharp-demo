@using BPM.Service
@model dynamic

@{
    var returnUrl = ViewData["returnUrl"] as string;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-notify.css" rel="stylesheet" />
    <link href="~/Content/login.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <div id="container">
        <form class="form-horizontal" role="form" onsubmit=" return false; ">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="name" class="col-sm-4 control-label">用户名</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="name" placeholder="用户名" value="admin">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-4 control-label">密码</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="password" placeholder="密码" value="admin">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button id="btnLogin" class="btn btn-primary" onclick="login('@returnUrl'); return false; ">@Protocols.LOGIN</button>
                </div>
            </div>
        </form>
    </div>
    <div id="tips" class='notifications bottom-right'></div>
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-notify.js"></script>
    <script src="~/Scripts/base.js"></script>
    <script src="~/Scripts/login.js"></script>
    @Html.Partial("_html5shiv")
</body>
</html>